doctype html
html
  head
    link(rel="stylesheet",href="/client/styles/reset.css")
    link(rel="stylesheet",href="/client/styles/perfectResize.css")
    link(rel="stylesheet",href="/client/styles/treeView.css")
    link(rel="stylesheet",href="/client/styles/dialogs.css")
    link(rel="stylesheet",href="index.css")

  body
    .main
      canvas(tabindex="0")

      .error-pane.collapsed
        .status
          .info No errors
          button.toggle +

        .errors(disabled)
          table
            thead
              tr
                th Line
                th Type
                th Message
                th File
            tbody

    .sidebar
      table
        tr.model
          th Model
          td
            button.upload Upload
            form(style="display: none")
              input.file-select(type="file",multiple)

        tr.map
          th Texture
          td
            button.upload Upload
            form(style="display: none")
              input.file-select(type="file",accept="image/*")

        tr
          th Show skeleton
          td
            input.show-skeleton(type="checkbox")

        tr
          th
            span Opacity
            input(type="checkbox").opacity-checkbox
          td
            input(type="number" min="0" max="1" step="0.1").property-opacity

      .header
        span Animations
      .animations-buttons
        button.new-animation New
        form(style="display: none")
          input.file-select.upload-animation(type="file",multiple)
        button(disabled).upload-animation Upload
        button(disabled).rename-animation Rename
        button(disabled).delete-animation Delete

      .animations-tree-view

      .advanced-textures
        .header
          span Textures

        table
          tr
            th Map
            td
              input
          tr
            th Light map
            td
              input
          tr
            th Specular map
            td
              input
          tr
            th Alpha map
            td
              input
          tr
            th Normal map (Phong)
            td
              input

        .textures-buttons
          button.new-animation New
          form(style="display: none")
            input.file-select.upload-animation(type="file",multiple)
          button(disabled).upload-animation Upload
          button(disabled).rename-animation Rename
          button(disabled).delete-animation Delete
        .textures-tree-view

      .advanced-textures-checkbox
        span Advanced textures
        input(type="checkbox")

    script(src="/core/SupCore.js")
    script(src="../../data.js")
    script(src="/system/SupEngine.js")
    script(src="../../components.js")
    script(src="/client/SupClient.js")
    script(src="index.js")
