@import "nib"

body
  display flex

.main
  flex 1
  display flex
  flex-flow column

  canvas
    flex 1
    min-height 100px

.sidebar
  width 250px
  border-left 1px solid #aaa

  display flex
  flex-flow column

  table
    padding 10px

    tr
      padding-bottom 10px

    th
      width 150px
      text-align left

    td
      display inline-flex

  // Animations tab
  .animations-buttons
    display flex

    button
      flex 1
      font-size smaller
      white-space nowrap

  .animations-tree-view
    border-top 1px solid #aaa
    flex 1
    position relative
    background #fff
    overflow-y auto

    .tree
      position absolute

    .name
      white-space pre
      width 150px

    input
      width 50px
      margin-right 5px

.error-pane
  display flex
  flex-flow column
  min-height 200px
  height 200px

  .status
    cursor pointer
    background-color #444
    color #fff
    display flex
    align-items center

    &.has-errors
      background-color #a44

    .info
      flex 1
      padding 0.5em

    button
      width 30px
      background transparent
      border none
      opacity 0.5
      font-size 20px
      font-weight bold
      cursor pointer
      color #fff

      &:hover
        opacity 1
        background-color rgba(0,0,0,0.1)

      &:active
        background-color #fff
        color #444

      &:disabled
        opacity 0.2
        cursor default

  .errors
    flex 1
    overflow-y scroll

    table
      width 100%
      border-collapse collapse

    tbody tr
      // cursor pointer

      &:hover { background: #eee; }
      // &:active { background-color: #444; color: #ccc; }

    th
      font-weight normal
      color #666

    td, th
      text-align left
      border 1px solid #ccc
      padding 0.4em

    td:first-child, th:first-child
      text-align right

    td:nth-child(3), th:nth-child(3)
      width 100%

    td:last-child
      white-space nowrap

  &.collapsed
    min-height 0 !important
    height auto !important
    .errors { display: none; }
