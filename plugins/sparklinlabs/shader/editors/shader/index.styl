@import "nib"

body
  display flex
  flex-flow column
  
  span
    text-align center
    padding 4px
  
  .top
    flex 1
    padding 5px
    display flex
    flex-flow row
    min-height 200px
  
  .left
    flex 1
    display flex
    flex-flow column
    padding-right 5px
    min-width 300px

  .uniforms, .attributes
    flex 1
    display flex
    flex-flow column

    .list
      overflow-y auto
      margin-bottom 10px

    table
      width 100%
      border-collapse collapse

    tr
      height 2em

      &.grey td
        color #666

      &:first-child td
        text-align center

    td
      text-align left
      border 1px solid #ccc
      width 45%

      &:nth-child(2)
        width 10%

      .value
        display flex

        input:not(:last-child)
          border-right 1px solid #ccc

      input, select
        width 100%
        height 100%
        border none

  .preview
    display flex
    flex-flow column
    padding-left 5px
    width 50%
    min-width 300px

    .title
      display flex
      padding-bottom 5px

      span
        margin 0 5% 0 40%

      input
        margin-left 5px
        width 30%
        display none

    canvas
      flex 1
      background-color black

  .shaders
    padding 5px
    display flex
    min-height 200px
    height 50%

    .vertex, .fragment
      display flex
      flex-flow column
      margin 0 2px 0 2px
      min-width 300px
      
    .vertex
      padding-right 5px
      flex 1
      
    .fragment
      width 50%