doctype html
html
  head
    link(rel="stylesheet",href="/styles/reset.css")
    link(rel="stylesheet",href="/styles/perfectResize.css")
    link(rel="stylesheet",href="/styles/treeView.css")
    link(rel="stylesheet",href="/styles/dialogs.css")
    link(rel="stylesheet",href="/styles/properties.css")
    link(rel="stylesheet",href="index.css")

    template#component-cartridge-template
      .header
        .type
        button.shrink-component –
        button.delete-component ×
      table.settings.properties
        tbody

  body
    .main
      .controls
        .camera
          .title= t("sceneEditor:top.camera.title")
          .camera-mode
            label(for="toggle-camera-button")= t("sceneEditor:top.camera.mode")
            button#toggle-camera-button 3D
          .camera-vertical-axis
            label(for="toggle-camera-vertical-axis")= t("sceneEditor:top.camera.verticalAxis")
            button#toggle-camera-vertical-axis Y
          .camera-speed
            label(for="camera-speed-slider")= t("sceneEditor:top.camera.speed")
            input#camera-speed-slider(type="range",min="0.05",max="2.0",step="0.05")
          .camera-2d-z(hidden)
            label(for="camera-2d-z") Z
            input#camera-2d-z(type="number",value="5")
        .transform-mode
          .title= t("sceneEditor:top.transform.title")
          div
            input#transform-mode-translate(type="radio",name="transformMode",value="translate",checked)
            label(for="transform-mode-translate",title="E")= t("sceneEditor:top.transform.move")
            input#transform-mode-rotate(type="radio",name="transformMode",value="rotate")
            label(for="transform-mode-rotate",title="R")= t("sceneEditor:top.transform.rotate")
            input#transform-mode-scale(type="radio",name="transformMode",value="scale")
            label(for="transform-mode-scale",title="T")= t("sceneEditor:top.transform.scale")
            input#transform-space(type="checkbox")
            label(for="transform-space",title="L")= t("sceneEditor:top.transform.local")
        .grid
          .title= t("sceneEditor:top.grid.title")
          div
            label(for="grid-step")= t("sceneEditor:top.grid.size")
            input#grid-step(type="number",value="1",min="0")
            input#grid-visible(type="checkbox")
            label(for="grid-visible")= t("sceneEditor:top.grid.visible")
        .light
          .title= t("sceneEditor:top.light.title")
          div
            input#show-light(type="checkbox")
      canvas(tabindex="0")

    .sidebar
      .nodes-buttons.flat-button-strip
        button.new-actor
        button(title="New prefab (Ctrl+P)").new-prefab
        button(title="Rename (F2)",disabled).rename-node
        button(title="Duplicate (Ctrl+D)",disabled).duplicate-node
        button(title="Delete (Delete)",disabled).delete-node

      .nodes-tree-view

      .inspector(hidden)
        table.transform.properties
          tr.position
            th.label  Position
            td
              .inputs
                input(type="number").x
                input(type="number").y
                input(type="number").z
          tr.orientation
            th.label Orientation
            td
              .inputs
                input(type="number").x
                input(type="number").y
                input(type="number").z
          tr.scale
            th.label Scale
            td
              .inputs
                input(type="number").x
                input(type="number").y
                input(type="number").z
          tr.visible
            th.label Visible
            td
              input(type="checkbox")
          tr.layer
            th.label Layer
            td
              select
                option(value="0") Default
          tr.prefab
            th.label Prefab
            td
              div
                input
                button Open
        .components-buttons
          button.new-component New Component
        .components

    script(src="/SupCore.js")
    script(src="../../../../../SupEngine.js")
    script(src="/SupClient.js")
    script(src="index.js")
