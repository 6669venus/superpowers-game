doctype html
html
  head
    link(rel="stylesheet",href="/client/styles/reset.css")
    link(rel="stylesheet",href="/client/styles/perfectResize.css")
    link(rel="stylesheet",href="/client/styles/treeView.css")
    link(rel="stylesheet",href="/client/styles/dialogs.css")
    link(rel="stylesheet",href="index.css")

    template#component-cartridge-template
      .header
        .type
        button.shrink-component –
        button.delete-component ×
      table.settings
        tbody

  body
    .main
      canvas(tabindex="0")
      .controls
        .camera-mode
          .label Camera Mode
          button#toggle-camera-button 3D
        .camera-speed
          .label Camera Speed
          input#camera-speed-slider(type="range",min="0.05",max="2.0",step="0.05")
        .transform-mode
          .label Transform
          input#transform-mode-translate(type="radio",name="transformMode",value="translate",checked)
          label(for="transform-mode-translate") Move
          input#transform-mode-rotate(type="radio",name="transformMode",value="rotate")
          label(for="transform-mode-rotate") Rotate
          input#transform-mode-scale(type="radio",name="transformMode",value="scale")
          label(for="transform-mode-scale") Scale
          input#transform-mode-local(type="checkbox")
          label(for="transform-mode-local") Local

    .sidebar
      .nodes-buttons
        button.new-node New Actor
        button.new-prefab New Prefab
        button(disabled).rename-node Rename
        button(disabled).duplicate-node Duplicate
        button(disabled).delete-node Delete

      .nodes-tree-view

      .inspector.noSelection
        table.transform
          tr.position
            th.label  Position
            td
              .values
                input(type="number").x
                input(type="number").y
                input(type="number").z
          tr.orientation
            th.label Orientation
            td
              .values
                input(type="number").x
                input(type="number").y
                input(type="number").z
          tr.scale
            th.label Scale
            td
              .values
                input(type="number").x
                input(type="number").y
                input(type="number").z
          tr.visible
            th.label Visible
            td
              input(type="checkbox")
          tr.layer
            th.label Layer
            td
              select
                option(value="0") Default
          tr.prefab
            th.label Prefab
            td
              input
        .components-buttons
          button.new-component New Component
        .components

    script(src="/core/SupCore.js")
    script(src="/system/SupEngine.js")
    script(src="../../data.js")
    script(src="../../components.js")
    script(src="/client/SupClient.js")
    script(src="../../componentEditors.js")
    script(src="index.js")
