body
  display flex

.sidebar
  width 250px
  border-right 1px solid #aaa

  display flex
  flex-flow column

.nodes-buttons
  display flex

  button
    flex 1
    font-size smaller
    white-space nowrap

.nodes-tree-view
  height 300px
  position relative
  background #fff
  border-bottom 1px solid #aaa
  overflow-y auto

  .tree
    position absolute

.inspector
  overflow-y auto
  flex 1
  .transform
    padding 0.25em

    .label
      padding 0.25em

    .values
      display flex

      > input
        flex 1
      > input:not(:last-of-type)
        border-right 1px solid #ccc

  &.noSelection
    visibility hidden

.components-buttons
  display flex

  button
    flex 1
    padding 0.25em

.components
  .header
    display flex
    background #444
    color #fff

    .type
      flex 1
      padding 0.5em

    button
      width 30px
      background transparent
      border none
      opacity 0.5
      font-size 20px
      font-weight bold
      cursor pointer
      color #fff

      &:hover
        opacity 1
        background-color rgba(0,0,0,0.1)

      &:active
        background-color #fff
        color #444

      &:disabled
        opacity 0.2
        cursor default

.inspector table
  width 100%
  border-collapse collapse
  font-size 12px

.inspector table
  th, td
    border 1px solid #ccc

  th
    text-align left
    padding 0.5em
    white-space nowrap
    overflow-x hidden
    text-overflow ellipsis
    font-weight normal
    background #eee

    &:only-child
      background #888
      color #eee

  td input, td select
    width 100%
    margin 0
    padding 0.25em
    border none

  td select
    padding 0.25em 0

  td input[type=checkbox]
    width auto
    margin 0.25em
    cursor pointer

.main
  flex 1
  display flex

  canvas
    background #000
    flex 1
