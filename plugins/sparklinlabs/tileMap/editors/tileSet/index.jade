doctype html
html
  head
    link(rel="stylesheet",href="/client/styles/reset.css")
    link(rel="stylesheet",href="/client/styles/perfectResize.css")
    link(rel="stylesheet",href="/client/styles/treeView.css")
    link(rel="stylesheet",href="/client/styles/dialogs.css")
    link(rel="stylesheet",href="/client/styles/properties.css")
    link(rel="stylesheet",href="index.css")

  body
    .main
      canvas(tabindex="0")

    .sidebar
      table.properties
        tr
          th(colspan="2") Tile Set
        tr
          th Texture
          td
            button.upload Upload
            form(style="display: none")
              input.file-select(type="file",accept="image/*")

            button.download Download

        tr
          th Grid (px)
          td
            .inputs
              input(type='number' min="1").grid-width
              input(type='number' min="1").grid-height

        tr
          th(colspan="2") Data
        tr
          th Tile ID
          td
            input(readonly).selected-tile-number

      .header
        span Properties

      .properties-buttons
        button.new-property New
        button(disabled).rename-property Rename
        button(disabled).delete-property Delete

      .properties-tree-view

    script(src="/core/SupCore.js")
    script(src="../../data.js")
    script(src="/system/SupEngine.js")
    script(src="../../components.js")
    script(src="/client/SupClient.js")
    script(src="index.js")
