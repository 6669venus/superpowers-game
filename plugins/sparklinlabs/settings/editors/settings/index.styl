body
  display flex

nav
  width 250px
  overflow-y auto
  position fixed
  top 0
  background #ddd
  bottom 0

  ol
    list-style none
    margin 0
    padding 0

  li
    padding 0
    margin 0

  > ol > li
    text-transform uppercase
    color #666
    background #ccc
    padding 0.25em 0.5em

  > ol ol
    padding 0.5em

  a
    display block
    color #444
    padding 0.25em 0.5em
    text-decoration none

    &:hover
      background #ccc

    &.active
      background #444
      color #eee

main
  margin-left 250px
  padding 1em
  flex 1

  > header 
    font-size 2.5em
    margin-bottom 0.33em
    background-color #ddd
    padding-left 0.5em
  
  > div:last-child
    margin-bottom 20em

section
  margin-bottom 1em

  &:not(:first-child)
    border-top: 1px solid #ccc;
    padding-top: 1em;

  header
    font-size 1.5em
    margin-bottom 0.5em

section table
  width 500px
  border-collapse collapse
  font-size 12px

  th, td
    border 1px solid #ccc

  th
    text-align left
    white-space nowrap
    overflow-x hidden
    text-overflow ellipsis
    font-weight normal
    background #eee
    padding 0 0.5em

  td input, td select, td textarea
    width 100%
    margin 0
    padding 0.5em 0.25em
    border none

  td select
    padding 0.25em 0

  td input[type=checkbox]
    width auto
    margin 0.5em
    cursor pointer

  td
    .inputs
      display flex

      input:not(:last-of-type)
        border-right 1px solid #ccc

    .list input:not(:last-of-type)
      border-bottom 1px solid #ccc

  td input.color
    font-family "Consolas", monospace
