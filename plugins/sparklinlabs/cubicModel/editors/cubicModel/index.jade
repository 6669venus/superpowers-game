doctype html
html
  head
    link(rel="stylesheet",href="/client/styles/reset.css")
    link(rel="stylesheet",href="/client/styles/perfectResize.css")
    link(rel="stylesheet",href="/client/styles/treeView.css")
    link(rel="stylesheet",href="/client/styles/dialogs.css")
    link(rel="stylesheet",href="index.css")

  body
    .main
      canvas(tabindex="0")
      .controls
        .transform-mode
          .label Transform
          input#transform-mode-translate-shape(type="radio",name="transformMode",value="translateShape",checked)
          label(for="transform-mode-translate-shape") Move shape
          input#transform-mode-translate-pivot(type="radio",name="transformMode",value="translatePivot")
          label(for="transform-mode-translate-pivot") Move pivot
          input#transform-mode-rotate(type="radio",name="transformMode",value="rotate")
          label(for="transform-mode-rotate") Rotate
          input#transform-mode-stretch(type="radio",name="transformMode",value="stretch")
          label(for="transform-mode-stretch") Stretch
          input#transform-space(type="checkbox")
          label(for="transform-space") Local
          input#transform-drag-pivot-with-shape(type="checkbox")
          label(for="transform-drag-pivot-with-shape") Drag pivot along with shape

    .sidebar
      table.settings
        tr
          th Unit ratio
          td
            input(type="number")
      .nodes-buttons
        button.new-node New Node
        button(disabled).rename-node Rename
        button(disabled).duplicate-node Duplicate
        button(disabled).delete-node Delete

      .nodes-tree-view
      .inspector(hidden)
        table
          tbody.transform
            tr.position
              th.label  Position
              td
                .inputs
                  input(type="number").x
                  input(type="number").y
                  input(type="number").z
            tr.orientation
              th.label Orientation
              td
                .inputs
                  input(type="number").x
                  input(type="number").y
                  input(type="number").z
          tbody.shape
            tr
              th(colspan="2") Shape
            tr.type
              th Type
              td
                select
                  // option(value="") (None)
                  option(value="box") Box
            tr.offset
              th Offset
              td
                .inputs
                  input(type="number").x
                  input(type="number").y
                  input(type="number").z
          tbody.box-shape
            tr.size
              th Size
              td
                .inputs
                  input(type="number").width
                  input(type="number").height
                  input(type="number").depth
            tr.stretch
              th Stretch
              td
                .inputs
                  input(type="number").width
                  input(type="number").height
                  input(type="number").depth

    script(src="/core/SupCore.js")
    script(src="/system/SupEngine.js")
    script(src="../../data.js")
    script(src="../../components.js")
    script(src="/client/SupClient.js")
    script(src="index.js")
