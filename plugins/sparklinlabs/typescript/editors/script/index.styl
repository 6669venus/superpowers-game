@require '../../node_modules/codemirror/lib/codemirror.css'
@require '../../node_modules/codemirror/addon/dialog/dialog.css'
// @require '../../node_modules/codemirror/theme/monokai.css'

body
  display flex
  flex-direction column
  flex 1

.code-editor-container
  flex 3
  position relative

  textarea
    opacity 0

.code-editor + .CodeMirror
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  height auto
  font-size 14px

.line-error
  background-color rgba(232, 86, 86, 0.5)

.line-error-gutter
  color #ec5050
  font-size 16px
  padding-left 5px
  margin-top -2px

.error-container
  flex 1
  display none
  flex-flow column

  div
    display inline
    background-color gainsboro

  textarea
    flex 1
    resize none